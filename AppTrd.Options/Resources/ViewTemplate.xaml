<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:view="clr-namespace:AppTrd.Options.View"
                    xmlns:viewModel="clr-namespace:AppTrd.Options.ViewModel"
                    xmlns:baseViewModel="clr-namespace:AppTrd.BaseLib.ViewModel;assembly=AppTrd.BaseLib"
                    xmlns:baseView="clr-namespace:AppTrd.BaseLib.View;assembly=AppTrd.BaseLib">

    <DataTemplate DataType="{x:Type baseViewModel:LoginViewModel}">
        <baseView:LoginView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModel:MainMenuViewModel}">
        <view:MainMenuView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModel:OptionsSelectorViewModel}">
        <view:OptionsSelectorView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModel:OptionsSimulatorViewModel}">
        <view:OptionsSimulatorView />
    </DataTemplate>

</ResourceDictionary>